<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Historico do banco</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <main class="container">
    <header class="header">
      <div>
        <h1>Historico do banco</h1>
        <p>Logado como <strong><%= username %></strong> (<%= role %>)</p>
      </div>
      <a href="/menu" class="button-link secondary-link">Voltar ao menu</a>
    </header>

    <section class="card">
      <h2>Envios de formulario</h2>
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Usuario</th>
              <th>Texto</th>
              <th>PIX</th>
              <th>Numero</th>
              <th>Categoria</th>
              <th>Termos</th>
              <th>Data</th>
            </tr>
          </thead>
          <tbody>
            <% if (!submissions.length) { %>
              <tr>
                <td colspan="8">Nenhum envio encontrado.</td>
              </tr>
            <% } %>
            <% submissions.forEach((item) => { %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.username %></td>
                <td><%= item.text_value %></td>
                <td><%= item.pix || '-' %></td>
                <td><%= item.number_value %></td>
                <td><%= item.category_value %></td>
                <td><%= item.accepted_terms ? "Sim" : "Nao" %></td>
                <td><%= new Date(item.created_at).toLocaleString('pt-BR') %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <section class="card">
      <h2>Registros de ponto</h2>
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Usuario</th>
              <th>Data</th>
              <th>Horario</th>
              <th>Minuto</th>
              <th>Segundo</th>
              <th>Local</th>
              <th>Criado em</th>
            </tr>
          </thead>
          <tbody>
            <% if (!registrosPonto.length) { %>
              <tr>
                <td colspan="8">Nenhum registro de ponto encontrado.</td>
              </tr>
            <% } %>
            <% registrosPonto.forEach((item) => { %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.username %></td>
                <td><%= new Date(item.data).toLocaleDateString('pt-BR') %></td>
                <td><%= String(item.horario).slice(0, 8) %></td>
                <td><%= item.minuto %></td>
                <td><%= item.segundo %></td>
                <td><%= item.local %></td>
                <td><%= new Date(item.created_at).toLocaleString('pt-BR') %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
</body>
</html>
