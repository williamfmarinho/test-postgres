<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Criar usuario</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <main class="container small">
    <header class="header">
      <div>
        <h1>Gerenciar usuarios</h1>
        <p>Logado como <strong><%= username %></strong> (<%= role %>)</p>
      </div>
      <a href="/menu" class="button-link secondary-link">Voltar ao menu</a>
    </header>

    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>
    <% if (success) { %>
      <p class="success"><%= success %></p>
    <% } %>

    <section class="card">
      <h2>Criar usuario normal</h2>
      <form method="POST" action="/usuarios/novo" class="form-grid">
        <label>
          Novo login
          <input type="text" name="username" required />
        </label>

        <label>
          Nova senha
          <input type="password" name="password" required />
        </label>

        <button type="submit">Criar usuario</button>
      </form>
    </section>

    <section class="card">
      <h2>Usuarios cadastrados</h2>
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Usuario</th>
              <th>Tipo</th>
              <th>Criado em</th>
              <th>Acao</th>
            </tr>
          </thead>
          <tbody>
            <% if (!users.length) { %>
              <tr>
                <td colspan="5">Nenhum usuario cadastrado.</td>
              </tr>
            <% } %>

            <% users.forEach((item) => { %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.username %></td>
                <td><%= item.role %></td>
                <td><%= new Date(item.created_at).toLocaleString('pt-BR') %></td>
                <td>
                  <% if (item.role !== "mestre" && item.username !== "admin1") { %>
                    <form method="POST" action="/usuarios/excluir/<%= item.id %>" onsubmit="return confirm('Deseja excluir este usuario?');">
                      <button type="submit" class="danger">Excluir</button>
                    </form>
                  <% } else { %>
                    -
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
</body>
</html>
